@model IEnumerable<EventEase.Models.Event>

@{
    ViewData["Title"] = "Events";
}

<h1 class="text-center mb-4">Events</h1>

<p>
    <a class="btn btn-primary mb-3" asp-action="Create">Create New Event</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title">@item.EventName</h5>
                    <p class="card-text">
                        <strong>Date:</strong> @item.EventDate.ToString("dd MMM yyyy")<br />
                        <strong>Description:</strong> @item.Description
                    </p>
                    <div class="d-flex justify-content-between">
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.EventId">Edit</a>
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.EventId">Details</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.EventId">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
