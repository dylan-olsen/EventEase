@model IEnumerable<EventEase.Models.Venue>

@{
    ViewData["Title"] = "Venue List";
}

<h1 class="text-center mb-4">Venue List</h1>

<p>
    <a class="btn btn-primary mb-3" asp-action="Create">Create New Venue</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
            <div class="card shadow">
                <img src="@item.ImageUrl" class="card-img-top" alt="@item.VenueName" style="max-height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">@item.VenueName</h5>
                    <p class="card-text">
                        <strong>Location:</strong> @item.Location<br />
                        <strong>Capacity:</strong> @item.Capacity
                    </p>
                    <div class="d-flex justify-content-between">
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.VenueId">Edit</a>
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.VenueId">Details</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.VenueId">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
