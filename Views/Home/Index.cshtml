@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="jumbotron text-white text-center" style="background: linear-gradient(to right, #6a11cb, #2575fc); padding: 3rem;">
    <h1 class="display-3">Welcome to EventEase</h1>
    <p class="lead">Your one-stop solution for managing venues, events, and bookings seamlessly.</p>
    <a class="btn btn-primary btn-lg" asp-action="Index" asp-controller="Venue">View Venues</a>
    <a class="btn btn-secondary btn-lg" asp-action="Index" asp-controller="Event">Explore Events</a>
</div>

<!-- Features Section -->
<div class="container mt-5">
    <div class="row text-center">
        <div class="col-md-4">
            <div class="card shadow mb-4">
